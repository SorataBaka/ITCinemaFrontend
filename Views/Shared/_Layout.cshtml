<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ITCinema</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/site.css" asp-append-version="true" />
    <script src="/js/site.js"></script>
</head>
<body>
    <header class="Main-Header-Body">
        <div class="Header-Image">
            <a href="/">
                <img src="./assets/ITCinema.png" alt="This is the logo" class="Header-Logo">
            </a>
        </div>
        <div class="Navigation">
            <div class="Navigation-Button">
                <a href="/dashboard">
                    <p class="Header-Button-Text">Dashboard</p>
                </a>
            </div>
            <div class="Navigation-Button">
                <a href="/theatres">
                    <p class="Header-Button-Text">Theatres</p>
                </a>
            </div>
            <div class="Navigation-Button">
                <a href="/movies">
                    <p class="Header-Button-Text">Movies</p>
                </a>
            </div>
            <a class="btn btn-primary nav-button" style="border-radius: 10px" href="/login" id="Login">Login</a>
            <a class="btn btn-primary nav-button" style="border-radius: 10px; display: none" href="/" id="Logout">Logout</a>
        </div>
    </header>
    @RenderBody()

    <footer class="Main-Footer">
        <div class="Footer-Content-Div">
            <div class="Copyright-Footer">
                <h5 class="Copyright-Header">ITCinema</h5>
                <p class="Copyright-Text">Copyright © 2020 ITCinema</p>
            </div>
            <div class="Socials-Tab">
                <a href="https://www.facebook.com/ITCinema/">
                    <img src="./assets/facebook.png" alt="Facebook" class="Social-Icon">
                </a>
                <a href="https://www.instagram.com/itcinema/">
                    <img src="./assets/instagram.png" alt="Instagram" class="Social-Icon">
                </a>
                <a href="https://twitter.com/ITCinema">
                    <img src="./assets/twitter.png" alt="Twitter" class="Social-Icon">
                </a>
            </div>
        </div>
        <!-- Create a vertical line -->
        <div class="Vertical-Line">
            <hr class="Vertical-Line-Content">
        </div>
        <div class="Footer-Contact-Div">
            <p class="Footer-Contact-Text">Contact Us</p>
            <div class="Footer-Contact-Info">
                <p class="Footer-Contact-Info-Text">
                    <img src="./assets/phone.png" alt="Phone" class="Social-Icon">
                    +1 (123) 456-7890
                </p>
                <p class="Footer-Contact-Info-Text">
                    <img src="./assets/email.png" alt="Email" class="Footer-Contact-Info-Icon">
                    contact@itcinema.com
                </p>
            </div>
        </div>
    </footer>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>